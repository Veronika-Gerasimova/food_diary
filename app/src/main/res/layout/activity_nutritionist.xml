<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nutritionist_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F9F9F9">

    <TextView
        android:id="@+id/nutritionistTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать на страницу нутрициолога!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/btn_view_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Неотвеченные вопросы" />

    <Button
        android:id="@+id/btn_recommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отчеты клиентов"
        android:layout_marginTop="12dp" />
    
</LinearLayout>
